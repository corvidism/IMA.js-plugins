{
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "message": "chore(release): publish"
    },
    "publish": {
      "conventionalCommits": true,
      "preid": "rc"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ],
  "version": "independent"
}
